<UserControl x:Class="TerryAndMike.SilverlightGame.PuzzleGame.Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="400" Height="300">
    <Grid x:Name="LayoutRoot" Background="#8fb0fc">
        <TextBox Name="outputTextBox" Width="390" VerticalScrollBarVisibility="Visible" Height="260" VerticalAlignment="Top" Margin="5" IsReadOnly="True"/>
        <TextBox Name="inputTextBox" Width="325" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Bottom" KeyDown="inputTextBox_KeyDown"/>
        <Button Name="resetButton" Content="Reset" Click="resetButton_Click" Width="60" Height="24" Margin="5" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
    </Grid>
</UserControl>
