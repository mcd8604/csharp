<UserControl x:Class="Memory.Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="400" Height="300">
    <Grid x:Name="LayoutRoot" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="270"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="310"></ColumnDefinition>
            <ColumnDefinition Width="30"></ColumnDefinition>
            <ColumnDefinition Width="30"></ColumnDefinition>
            <ColumnDefinition Width="30"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBox Name="imageTextBox" Margin="3" Grid.Column="0" Grid.Row="0"/>
        <TextBox Name="rowTextBox" Text="4" Margin="3" Grid.Column="1" Grid.Row="0"/>
        <TextBox Name="colTextBox" Text="5" Margin="3" Grid.Column="2" Grid.Row="0"/>
        <Button Name="resetButton" Content="go!" Click="resetButton_Click" Margin="3" Grid.Column="3" Grid.Row="0" />
    </Grid>
</UserControl>
